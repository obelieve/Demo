<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mynotezxy"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_note"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.mynotezxy.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.variety.WriteActivity"></activity>
        <activity android:name="com.example.variety.CameraActivity"></activity>
        <activity android:name="com.example.variety.VoiceActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name="com.example.variety.HandWriteActivity"
            android:windowSoftInputMode="stateHidden"></activity>
        <activity android:name="com.example.variety.GraffitoActivity"></activity>
        <activity android:name="com.example.variety.VariedActivity"
            android:windowSoftInputMode="stateHidden"></activity>
        <activity android:name="com.example.variety.define.ShowPictureActivity"></activity>
        <activity android:name="com.example.variety.define.ShowVoiceActivity"></activity>
    </application>

</manifest>
