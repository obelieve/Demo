<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zxy.demo.view.HomeViewPager
        android:id="@+id/vp_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.zxy.demo.view.HomeTopView
        android:id="@+id/cl_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_top_height"
        app:layout_behavior="com.zxy.demo.behavior.HomeTopBehavior">
        <TextView
            android:id="@+id/tv_place"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/home_top_drag_height"
            android:layout_marginLeft="15dp"
            android:drawablePadding="3dp"
            android:drawableLeft="@drawable/sel_ic_place"
            android:drawableRight="@drawable/sel_ic_arrow_right"
            android:drawableStart="@drawable/sel_ic_place"
            android:drawableEnd="@drawable/sel_ic_arrow_right"
            android:gravity="center_vertical"
            android:paddingBottom="5dp"
            android:text="半岛国际2号楼"
            android:textColor="@color/sel_color_ffffff_333333"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <ImageView
            android:id="@+id/iv_msg"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/home_top_drag_height"
            android:layout_marginRight="15dp"
            android:layout_marginEnd="15dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingEnd="5dp"
            android:src="@drawable/sel_ic_msg"
            app:layout_constraintBottom_toBottomOf="@id/tv_place"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_place" />

        <View
            android:id="@+id/view_top"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <View
            android:id="@+id/view_content"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_top"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <View
            android:id="@+id/view_search"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/sel_round2_rec_stroke_bg"
            android:gravity="center"
            app:layout_constraintLeft_toLeftOf="@id/view_content"
            app:layout_constraintRight_toRightOf="@id/view_content"
            app:layout_constraintTop_toTopOf="@id/view_content"
            app:layout_constraintBottom_toTopOf="@id/tl_tab" />

        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_search"
            app:layout_constraintBottom_toTopOf="@+id/tl_tab"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toLeftOf="@id/view_search"
            app:layout_constraintRight_toLeftOf="@id/tv_search"
            app:layout_constraintTop_toTopOf="@+id/view_search" />

        <TextView
            android:id="@+id/tv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="1元起送，30分钟达"
            android:textColor="#aaaaaa"
            android:textSize="14sp"
            android:includeFontPadding="false"
            app:layout_constraintBottom_toTopOf="@+id/tl_tab"
            app:layout_constraintLeft_toRightOf="@id/iv_search"
            app:layout_constraintRight_toRightOf="@id/view_search"
            app:layout_constraintTop_toTopOf="@id/view_search" />

        <android.support.design.widget.TabLayout
            android:id="@+id/tl_tab"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:layout_constraintBottom_toBottomOf="@id/view_content"
            app:layout_constraintLeft_toLeftOf="@id/view_content"
            app:layout_constraintRight_toRightOf="@id/view_content"
            app:layout_constraintTop_toBottomOf="@id/view_search"
            app:tabIndicatorColor="@color/white"
            app:tabIndicatorHeight="2dp"
            app:tabMode="scrollable"
            app:tabTextColor="@color/white"
            app:tabSelectedTextColor="@color/white"
            app:tabPaddingEnd="15dp"
            app:tabPaddingStart="15dp"
            app:tabMinWidth="48dp"
            android:background="#00000000"
            app:tabTextAppearance="@style/TabLayoutTextStyle"
            app:tabMaxWidth="144dp"/>

    </com.zxy.demo.view.HomeTopView>

</android.support.design.widget.CoordinatorLayout>
