<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:splitMotionEvents="false">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_collapseMode="parallax"
            app:layout_collapseParallaxMultiplier="0.5"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <LinearLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/match_detail_head"
                    android:layout_width="match_parent"
                    android:layout_height="210dp">

                    <ImageView
                        android:id="@+id/match_detail_icon"
                        android:layout_width="match_parent"
                        android:layout_height="210dp"
                        android:background="@mipmap/match_detail_head"
                        android:scaleType="centerCrop" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:padding="10dp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="40dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/home_icon"
                                android:layout_width="50dp"
                                android:layout_height="50dp" />

                            <TextView
                                android:id="@+id/home_name"
                                style="@style/CommonExpandStyle"
                                android:layout_below="@+id/home_icon"
                                android:maxLength="6"
                                android:ellipsize="end"
                                android:layout_marginTop="5dp"
                                android:textColor="@color/common_white" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/match_scroce"
                            style="@style/CommonExpandStyle"
                            android:layout_centerInParent="true"
                            android:textColor="@color/common_white"
                            android:textSize="30dp"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/match_time"
                            style="@style/CommonExpandStyle"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="10dp"
                            android:textColor="@color/common_white" />

                        <TextView
                            android:id="@+id/match_tip"
                            style="@style/CommonExpandStyle"
                            android:layout_below="@+id/match_scroce"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/common_white" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/away_icon"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_alignParentRight="true" />

                            <TextView
                                android:id="@+id/away_name"
                                style="@style/CommonExpandStyle"
                                android:layout_alignParentRight="true"
                                android:layout_below="@+id/away_icon"
                                android:layout_marginTop="5dp"
                                android:ellipsize="end"
                                android:maxLength="6"
                                android:textColor="@color/common_white" />
                        </LinearLayout>

                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

                <RelativeLayout
                    android:id="@+id/title_layout"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginBottom="15dp">

                    <RelativeLayout
                        android:id="@+id/left_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentBottom="true"
                        android:paddingRight="16dp">

                        <ImageView
                            android:id="@+id/left_icon"
                            android:layout_width="22dp"
                            android:layout_height="20dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentLeft="true"
                            android:background="@mipmap/return_white" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/match_follow_ring_layout"
                        android:layout_toRightOf="@+id/left_layout"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:paddingLeft="15dp"
                        android:paddingRight="35dp"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/common_white"
                        android:textSize="@dimen/common_big_title" />

                    <RelativeLayout
                        android:id="@+id/match_follow_ring_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:paddingLeft="5dp"
                        android:paddingRight="16dp">

                        <ImageView
                            android:id="@+id/match_follow_ring"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentBottom="true"
                            android:background="@mipmap/ring_normal" />
                    </RelativeLayout>
                </RelativeLayout>
            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:id="@+id/scroll_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_marginTop="-210dp"
                android:background="@mipmap/match_detail_head"
                android:scaleType="centerCrop" />

            <RelativeLayout
                android:id="@+id/match_detail_tab_content"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/btn_white_bg"
                android:paddingBottom="5dp">

                <com.flyco.tablayout.SlidingTabLayout
                    android:id="@+id/match_detail_tab"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    app:tl_indicator_color="@color/tab_line"
                    app:tl_indicator_height="3dp"
                    app:tl_indicator_width="15dp"
                    app:tl_indicator_width_equal_title="false"
                    app:tl_tab_space_equal="true"
                    app:tl_textSelectColor="@color/common_main"
                    app:tl_textUnselectColor="@color/tab_text"
                    app:tl_textsize="16dp"></com.flyco.tablayout.SlidingTabLayout>
            </RelativeLayout>
        </RelativeLayout>

        <VideoView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/common_line" />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/match_detail_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/match_detail_tab_content" />
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
