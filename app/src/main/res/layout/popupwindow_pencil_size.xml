<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/size_Layout"
    android:layout_width="match_parent"
    android:layout_height="60dp">
    <LinearLayout
            android:layout_width="match_parent"
    		android:layout_height="60dp"
    		android:orientation="horizontal">
		   	<ImageView
		   	    android:id="@+id/ivSize1"
		        android:layout_width="wrap_content"
		     	android:layout_height="wrap_content"
		     	android:padding="10dp"
		     	android:src="@drawable/pencil_size1" />
		    <ImageView
		        android:id="@+id/ivSize2"
		     	android:layout_width="wrap_content"
		     	android:layout_height="wrap_content"
		     	android:padding="10dp"
		     	android:src="@drawable/pencil_size2" />
		    <ImageView
		        android:id="@+id/ivSize3"
		     	android:layout_width="wrap_content"
		     	android:layout_height="wrap_content"
		     	android:padding="10dp"
		     	android:src="@drawable/pencil_size3" />
		    <ImageView
		        android:id="@+id/ivSize4"
		     	android:layout_width="wrap_content"
		     	android:layout_height="wrap_content"
		     	android:padding="10dp"
		     	android:src="@drawable/pencil_size4" />
		    <ImageView
		        android:id="@+id/ivSize5"
		     	android:layout_width="wrap_content"
		     	android:layout_height="wrap_content"
		     	android:padding="10dp"
		     	android:src="@drawable/pencil_size5" />
		    <ImageView
		        android:id="@+id/ivSize6"
		     	android:layout_width="wrap_content"
		     	android:layout_height="wrap_content"
		     	android:padding="10dp"
		     	android:src="@drawable/pencil_size6" />
		    </LinearLayout>
</RelativeLayout>                                        
	        
