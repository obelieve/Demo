<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="包含"
        android:textColor="#ff333333"
        android:textSize="12sp" />

    <com.zxy.demo.test.ui.NumUseTTFTextView
        android:id="@+id/ntv_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="03,06"
        android:textColor="#fff53f3f"
        android:textSize="15sp" />

    <com.zxy.demo.test.ui.RoundProgress
        android:id="@+id/rp_percent"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginTop="20dp"
        android:max="100"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:progress="50"
        app:CustomUnReachEnd="270"
        app:CustomReachPaintStroken="3dp"
        app:CustomUnReachPaintStroken="0.5dp"
        app:CustomUnReachStart="-90"
        app:HorizontalProgresTextSize = "20sp"
        app:CustomHasProgressNum = "true"
        app:HorizontalProgresReachColor="#1900ff"
        app:HorizontalProgresTextColor="#1900ff"
        app:HorizontalProgresUnReachColor="#0b1949" />
</LinearLayout>