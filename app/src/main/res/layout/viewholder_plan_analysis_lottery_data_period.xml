<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_content_lottey_data_item"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/color_FBFCFB"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/tv_lottery_no_item_lottey_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            tools:text="087期"
            android:textColor="@color/color_text_main"
            android:textSize="12sp" />
        <com.zxy.demo.test.ui.NumUseTTFTextView
            android:id="@+id/tv_lottery_number_item_lottey_data"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:textStyle="bold"
            tools:text="02 03 04 05 06"
            android:layout_marginRight="18dp"
            android:textColor="@color/color_text_main"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/tv_status_remark_item_lottey_data"
            android:layout_width="34dp"
            android:layout_height="15dp"
            android:gravity="center"
            android:background="@drawable/shape_f4f4f5_corners_8"
            tools:text="未中"
            android:layout_marginRight="10dp"
            android:textColor="#999999"
            android:textSize="10sp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#F0F0F0" />
</LinearLayout>

