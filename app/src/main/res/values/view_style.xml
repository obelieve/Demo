<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--bottom nav view style-->
    <style name="bottom_nav_ll_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center|bottom</item>
    </style>
    <style name="bottom_nav_tv_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:textColor">@drawable/sel_bottom_nav_text</item>
    </style>

    <style name="bottom_nav_iv_style">
        <item name="android:layout_width">18dp</item>
        <item name="android:layout_height">18dp</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">14sp</item>
    </style>

</resources>
