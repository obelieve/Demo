<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CommonTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/common_title</item>
        <item name="android:textColor">@color/common_title</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="CommonTitleStyle">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/common_black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="CommonTipStyle">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/common_gray</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="CommonContentStyle">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">#4D4D4D</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="CommonExpandStyle">
        <item name="android:textSize">13dp</item>
        <item name="android:textColor">#4D4D4D</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="CommonBtnStyle">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/common_white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:gravity">center</item>
    </style>

    <dimen name="common_title">16dp</dimen>
    <color name="common_title">#161F29</color>
    <color name="common_black">#333</color>
    <color name="common_gray">#c3c3c3</color>
</resources>
