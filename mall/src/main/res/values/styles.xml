<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="TabLayoutTextStyle">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="RatingStyle_10" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_bar_10</item>
        <item name="android:minHeight">10dp</item>
    </style>
    <style name="RatingStyle_15" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_bar_15</item>
        <item name="android:minHeight">15dp</item>
    </style>
    <style name="RatingStyle_20" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_bar_20</item>
        <item name="android:minHeight">20dp</item>
    </style>
    <style name="TranslucentTheme" parent="@style/AppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/alphaAnim</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="alphaAnim">
        <item name="android:windowEnterAnimation">@anim/popup_style_show</item>
        <item name="android:windowExitAnimation">@anim/popup_style_hide</item>
    </style>
</resources>
