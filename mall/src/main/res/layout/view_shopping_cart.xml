<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="58dp">

    <View
        android:id="@+id/view_bg"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="#07111b"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_circle_bg"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="18dp"
        android:layout_marginBottom="8dp"
        android:src="@color/color_07111b"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_shopping_cart"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:background="@drawable/bg_circle_00a0dc_22dp"
        android:padding="12dp"
        android:src="@drawable/ic_shopping_cart"
        app:layout_constraintBottom_toBottomOf="@id/civ_circle_bg"
        app:layout_constraintLeft_toLeftOf="@id/civ_circle_bg"
        app:layout_constraintRight_toRightOf="@id/civ_circle_bg" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:background="@drawable/bg_circle_f01414_8dp"
        android:gravity="center"
        android:minWidth="16dp"
        android:textColor="@color/colorWhite"
        app:layout_constraintCircle="@id/civ_shopping_cart"
        app:layout_constraintCircleAngle="45"
        app:layout_constraintCircleRadius="25dp"
        app:layout_constraintLeft_toLeftOf="@id/civ_shopping_cart"
        app:layout_constraintTop_toTopOf="@id/civ_shopping_cart"
        tools:text="1" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:maxWidth="150dp"
        android:maxLength="10"
        android:singleLine="true"
        android:textColor="@color/colorWhite"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/view_bg"
        app:layout_constraintLeft_toRightOf="@id/civ_shopping_cart"
        app:layout_constraintTop_toTopOf="@id/view_bg"
        tools:text="￥40" />

    <View
        android:layout_width="1dp"
        android:layout_height="24dp"
        android:layout_marginLeft="12dp"
        android:background="#2b333b"
        app:layout_constraintBottom_toBottomOf="@id/view_bg"
        app:layout_constraintLeft_toRightOf="@id/tv_price"
        app:layout_constraintTop_toTopOf="@id/view_bg" />

    <TextView
        android:id="@+id/tv_append_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:maxWidth="150dp"
        android:singleLine="true"
        android:textColor="#66ffffff"
        android:textSize="10sp"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="@id/view_bg"
        app:layout_constraintLeft_toRightOf="@id/tv_price"
        app:layout_constraintTop_toTopOf="@id/view_bg"
        tools:text="另需配送费￥4元 " />

    <TextView
        android:id="@+id/tv_confirm"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginLeft="25dp"
        android:background="@drawable/sel_2b333b_00a0dc"
        android:enabled="false"
        android:gravity="center"
        android:minWidth="80dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:singleLine="true"
        android:textColor="@color/sel_66ffffff_ffffff"
        android:textStyle="bold"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="@id/view_bg"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintLeft_toRightOf="@id/tv_append_price"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/view_bg"
        tools:text="还差￥10起送" />
</androidx.constraintlayout.widget.ConstraintLayout>
