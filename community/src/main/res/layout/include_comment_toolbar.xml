<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#F7F7F7" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/common_white"
        android:gravity="center_vertical">

        <View
            android:layout_width="3dp"
            android:layout_height="16dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/bg_circle_main_10dp" />

        <TextView
            android:id="@+id/txt_comment_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:text="评论"
            android:textColor="#4C4C4C"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="114dp"
            android:layout_height="26dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/bg_circle_f2f3f5_25dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_sort_time"
                android:layout_width="55dp"
                android:layout_height="23dp"
                android:layout_marginLeft="2dp"
                android:background="@drawable/sel_circle_00000000_ffffff_25dp"
                android:gravity="center"
                android:text="按时间"
                android:textColor="@color/sel_color_999999_333333"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_sort_hot"
                android:layout_width="55dp"
                android:layout_height="23dp"
                android:background="@drawable/sel_circle_00000000_ffffff_25dp"
                android:gravity="center"
                android:text="按热度"
                android:textColor="@color/sel_color_999999_333333"
                android:textSize="11sp" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#f0f0f0" />
</LinearLayout>