<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_praise_and_comment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/layout_praise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingRight="20dp"
        android:paddingBottom="12dp"
        android:clipToPadding="false"
        android:gravity="center_vertical">

        <CheckBox
            android:id="@+id/cb_like"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@drawable/sel_grzy_give_the_thumbs_up"
            android:button="@null"
            android:clickable="false"
            android:stateListAnimator="@drawable/sel_anim_zan"/>

        <TextView
            android:id="@+id/tv_likenum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="666"
            android:textColor="@color/sel_color_main_333333" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:paddingBottom="12dp"
        app:layout_constraintLeft_toRightOf="@id/layout_praise"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingRight="20dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@drawable/grzy_comment" />

        <TextView
            android:id="@+id/tv_comment_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="666"
            android:textColor="@color/color_333333" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_dialog"
        android:layout_width="22dp"
        android:layout_height="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_gravity="right"
        android:src="@drawable/h_sj_more_and_more_grey"
        android:background="@drawable/bg_circle_f7f7f7_10dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:layout_marginBottom="12dp"
        android:visibility="gone"
        tools:visibility="visible" />
</androidx.constraintlayout.widget.ConstraintLayout>