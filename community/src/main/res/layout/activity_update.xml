<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/update_dialog_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/common_transparent_black">

        <LinearLayout
            android:id="@+id/update_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_centerInParent="true"
            android:paddingTop="100dp"
            android:background="@drawable/common_dialog_bg"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/common_padding"
                android:paddingEnd="@dimen/common_padding"
                android:paddingBottom="@dimen/common_padding">

                <TextView
                    android:id="@+id/update_tile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/update_title"
                    android:textStyle="bold"
                    android:textColor="@color/common_title"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/update_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:maxHeight="200dp"
                    android:textColor="#4D4D4D"
                    android:textSize="15dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/update_now"
                android:background = "@drawable/common_button_red_selector"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="40dp"
                android:gravity = "center"
                android:layout_marginRight="40dp"
                android:textSize = "18sp"
                android:layout_height = "44dp"
                android:layout_width = "match_parent"
                android:textColor = "@color/common_white"
                android:clickable="false"
                android:text="@string/update_now" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="178dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/update_layout"
            android:layout_marginBottom="-60dp"
            app:srcCompat="@drawable/xx_version" />

        <RelativeLayout
            android:id="@+id/update_wait"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/update_layout">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/dialog_close"
                android:layout_centerInParent="true"/>

        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>