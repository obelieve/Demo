<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_comment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/common_white"
    android:elevation="3dp"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/common_line" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/edit_comment_content"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="发表评论"
            android:maxLines="1"
            android:textColorHint="#CCC"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/layout_like"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cb_like"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:background="@drawable/sel_state_checked_like"
                android:button="@null"
                android:clickable="false"
                android:stateListAnimator="@drawable/sel_anim_zan" />

            <TextView
                android:id="@+id/txt_likenum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:textColor="@drawable/sel_color_main_666666"
                android:textSize="16sp" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_send"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/sel_circle_main_ffffff_3dp"
            android:text="发送"
            android:textColor="@color/white"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>